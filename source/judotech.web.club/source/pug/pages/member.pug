extends ../templates/main.pug
block content
    main.container
        form(method="post")
            // Titelrad
            h2#memberTitle
            p
            strong  Bältesgrad: 
                span#beltGrade

            p
            strong Närvaro: 
                span#attendance 
                span  lektioner

            // Preferenser
            fieldset
            legend 
                strong Gillar / Vill gärna
            label
                input(type="checkbox", name="likes_technique", checked=likes_technique)
                |  Träna teknik m.m.
            label
                input(type="checkbox", name="likes_randori", checked=likes_randori)
                |  Träna randori
            label 
                input(type="checkbox", name="likes_compete", checked=likes_compete)
                |  Tävla
            label
                input(type="checkbox", name="likes_coach", checked=likes_coach)
                |  Bli / vara tränare
            label
                input(type="checkbox", name="likes_referee", checked=likes_referee)
                |  Bli / vara domare

            label(for="comment") Kommentar:
            textarea#comment(name="comment", rows="4") #{comment || ''}


            footer
            button(type="submit") Spara
            a.secondary-button(href="#") Avbryt



    
block scripts
    script(src='/javascripts/member.js')