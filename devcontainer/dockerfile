# Dockerfile

FROM ubuntu:22.04

# Installera bash, curl, git, nano, sudo – användbara basverktyg
RUN apt-get update && \
    apt-get install -y \
    curl \
    git \
    nano \
    sudo \
    build-essential \
    ca-certificates \
    gnupg \
    lsb-release \
    wget \
    unzip \
    && apt-get clean

# Skapa en användare (så du slipper köra som root)
RUN useradd -ms /bin/bash devuser && \
    echo "devuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER devuser
WORKDIR /home/devuser

CMD ["bash"]
